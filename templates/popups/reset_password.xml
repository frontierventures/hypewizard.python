<div id="reset_password_popup" style='padding:10px; background:#fff; text-align: center;' xmlns:t="http://twistedmatrix.com/ns/twisted.web.template/0.1">
    <form name="reset_password_form" action="../reset_password" method="POST" enctype="application/x-www-form-urlencoded">
        <div>
            <h1>Reset Password</h1>
            <div id="reset_password_alert">
            </div>
            <div>
                <input type="text" placeholder="Email Address" name="email"/>
            </div>
            <button name="button" value="Submit" class="btn btn-large btn-primary" type="submit">Email Instructions</button>
        </div>
    </form>
</div>
