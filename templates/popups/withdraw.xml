<div id="withdraw_popup" style='padding:10px; background:#fff;' xmlns:t="http://twistedmatrix.com/ns/twisted.web.template/0.1">
    <form name="withdraw_form" action="../withdraw" method="POST" enctype="application/x-www-form-urlencoded" t:render="form">
        <div style="text-align: center">
            <h1>Make a Withidrawal</h1>
            <div id="withdraw_alert">
            </div>
            <div>
                <input type="text" placeholder="Amount (BTC)" name="amount"/>
            </div>
            <div>
                <input type="text" placeholder="Bitcoin Address" name="bitcoin_address"/>
            </div>
            <button name="button" value="Submit" class="btn btn-large btn-primary" type="submit">Continue</button>
        </div>
    </form>
</div>
