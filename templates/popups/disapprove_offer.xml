<div id="disapprove_offer_popup" style='padding:10px; background:#fff; text-align: center;' xmlns:t="http://twistedmatrix.com/ns/twisted.web.template/0.1">
    <form name="disapprove_offer_form" action="../disapprove_offer" method="POST" enctype="application/x-www-form-urlencoded" t:render="form">
        <input type="hidden" name="offer_id" />
        <div>
            <h1>Disapprove Offer?</h1>
            <div id="disapprove_offer_alert">
            </div>
            <div>
                <select name="is_confirmed">
                    <option t:render="is_confirmed_option">
                        <t:attr name="value"><t:slot name="value" /></t:attr>
                        <t:slot name="caption" />
                    </option>
                </select>
            </div>
            <button name="button" value="Submit" class="btn btn-large btn-primary" type="submit">Continue</button>
        </div>
    </form>
</div>
