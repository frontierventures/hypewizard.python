<div id="change_password_popup" style='padding:10px; background:#fff; text-align: center;' xmlns:t="http://twistedmatrix.com/ns/twisted.web.template/0.1">
    <form name="change_password_form" action="../change_password" method="POST" enctype="application/x-www-form-urlencoded">
        <div>
            <h1>Change Password</h1>
            <div id="change_password_alert">
            </div>
            <div>
                <input type="password" placeholder="Old Password" name="old_password"/>
            </div>
            <div>
                <input type="password" placeholder="New Password" name="new_password"/>
            </div>
            <div>
                <input type="password" placeholder="Repeat New Password" name="new_password_repeat"/>
            </div>
            <button name="button" value="Submit" class="btn btn-large btn-primary" type="submit">Submit</button>
        </div>
    </form>
</div>
