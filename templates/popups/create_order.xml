<div id="create_order_popup" style='padding:10px; background:#fff;' xmlns:t="http://twistedmatrix.com/ns/twisted.web.template/0.1">
    <form name="create_ask_form" action="../create_ask" method="POST" enctype="application/x-www-form-urlencoded" t:render="form">
        <div>
            <h1>Place Ask</h1>
            <div>
                Please provide details for the message you want to retweet 
            </div>
            <div id="create_ask_alert">
            </div>
            <div>
                <label for="quantity">Tweet:</label>
                <input type="text" name="message"/>
            </div>
            <div>
                <label for="quantity">Cost:</label>
                <input type="text" name="cost"/>
            </div>
            <button name="button" value="Submit" class="btn btn-large btn-primary" type="submit">Put on Market</button>
        </div>
    </form>
</div>
