<div class="container-fluid" xmlns:t="http://twistedmatrix.com/ns/twisted.web.template/0.1">
    <h1>Your Tweets</h1>
    <table style="width: 100%">
        <thead>
            <tr>
                <th>Status Id</th>
                <th>Status Text</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr t:render="row">
                <td style="text-align:center"><t:slot name="status_id" /></td>
                <td style="text-align:center"><t:slot name="status_text" /></td>
                <td style="text-align:center">
                    <a t:render="action">
                        <t:attr name="href"><t:slot name="url" /></t:attr>
                        <t:slot name="caption" /> 
                    </a>
                </td>
            </tr>
        </tbody>
    </table>
</div>
